@model Game
@{
    ViewData["Title"] = Model.Name;
}
<div class="card border-5 rounded-4 mt-3 overflow-hidden">
    <div class="card-body p-0 ">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <h1>@Model.Name</h1>
                    <span class="badge bg-primary mb-4 fw-bold fs-6">@Model.Category.Name</span>
                    <p class="fs-6 fw-bolder">@Model.Description</p>
                </div>
                <div>
                    @foreach(var device in Model.Devices)
                    {
                        <i class="@device.Device.Icon me-3 fs-6 "></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="Game-Cover" class="w-100"/>
            </div>
        </div>
    </div>
</div>
