@model CreateFormGamesViewModel
@{
    ViewData["Title"] = "Add Game";
}
<h2><i class="bi bi-plus-lg"></i> New Game</h2>
<hr />

<form method="post" asp-action="Create" asp-controller="Games" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-2">Name</label>
                <input asp-for="Name" type="text" class="form-control"  placeholder="Enter Name">
                <span class=" text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="@Model.Categories">
                    <option value="">-select category-</option>
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <label asp-for="DevieceId" class="form-label mt-4"></label>
                <select multiple="" class="form-select" asp-for="DevieceId" asp-items="@Model.Deviecs" >
                    <option>-select device-</option>
                </select>
                <span class="text-danger" asp-validation-for="DevieceId"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                <span class=" text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input class="form-control" type="file" asp-for="Cover">
                <small class="form-text text-muted">Only .jpg .png files are allowed with max 1MB.</small>
                <span class="text-danger" asp-validation-for="Cover"></span>
            </div>
            <div class=" mt-3">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-bar-left"></i> Back</a>
                <button type="submit" class="btn btn-primary "><i class="bi bi-check-all"></i> Submit</button>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
